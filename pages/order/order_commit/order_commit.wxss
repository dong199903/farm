/* pages/order/order_commit/order_commit.wxss */
.container{
  padding: 0 30rpx;
}
textarea{
  border: 1rpx solid #ccc;
}
.sub{
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
}
.goods_info{
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.goods_info>view:first-child{
  width: 200rpx;
  margin-right: 15rpx;
}
.title{
  font-size: 30rpx;
}
.desc{
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  font-size: 30rpx;
}
image{
  width: 200rpx!important;
  height: 180rpx;
}
.loading{
  text-align: center;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
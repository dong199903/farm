.container {
  background-color: #fff;
  min-height: 100%;
  align-items: stretch;
  overflow-x: hidden;
  position: relative;
}

/* goodslist */
.goodslist {
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: pink;
}

.goodslist .good {
  height: 200rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: center;
}

.goodslist image {
  width: 180rpx;
  height: 180rpx;
}

.goodslist .count {
  display: flex;
  font-display: row;
  width: 100rpx;
  justify-content: space-between;
}

/* bottom */
.bottom {
  position: fixed;
  left: 0;
  padding: 0;
  margin: 0;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  background-color: #fff;
}

.bottom .checkedbox t-radio {
  font-size: 36rpx;
}

.bottom .total {
  font-size: 36rpx;
}

.bottom .pay button {
  font-size: 36rpx;
}
/**index.wxss**/
page{
  padding-left: 0;
  padding-right: 0;
}
.container {
  min-height: 100%;
  align-items: stretch;
  overflow-x: hidden;
  position: relative;
  padding: 0 30rpx;
}

/* 搜索框样式 */
.search_header{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}
.address{
  font-size: 32rpx;
  margin-left: 10rpx;
}
.search {
  height: 80rpx;
  flex: 1;
  padding: 0 24rpx;
  background: #f3f3f3;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
  
  border-radius: 30rpx;
  border:1rpx solid #ccc;
}

.search .txt {
  height: 100rpx;
  line-height: 100rpx;
  color: #666;
  padding-left: 10rpx;
  font-size: 30rpx;
}

/* 搜索框样式 */
/* 轮播图样式 */

.banner-wrap {
  width: 100%;
  height: 300rpx;
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}

.banner {
  width: 750rpx;
  height: 300rpx;
}

.banner image {
  width: 100%;
  height: 300rpx;
  border-radius: 20rpx;
}

/* 轮播图样式 */
/* 产品分类样式 */

.catalog-wrap {
  width: 100%;
  height: 144rpx;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}
.box{
  border-radius: 20rpx!important;
  overflow: hidden;
}
.catalog-wrap .item {
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  background-color: #fff;
}

.catalog-wrap .icon-navi {
  width: 100rpx;
  /* height: 160rpx; */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.catalog-wrap .icon-img {
  height: 100rpx;
  width: 100rpx;
}

.catalog-wrap .icon-text {
  width: 100%;
  text-align: center;
  font-size: 32rpx;
  margin-top: 10rpx;
}

/* goods-container */
.goods-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.goods-container .item {
  width: 47%;
  margin-bottom: 30rpx;
}

.goods-container image {
  width: 100%;
  max-height: 300rpx;
}

.goods-container .goods-title {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 30rpx;
  margin-bottom: 10rpx;
}

.goods-container .price {
  color: red;
  font-size: 30rpx;
}

/* 没有更多  */

.no-more-goods {
  text-align: center;
  font-size: 28rpx;
  margin: 20rpx 0 30rpx 0;
  color: #999;
}

.title {
  background-color: #f9f9f9;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-weight: 600;
  margin-bottom: 30rpx;
}

.loading {
  text-align: center;
}
<header title="首页"></header>

<view>
  <t-swiper interval="3000" navigation>
    <t-swiper-item wx:for="{{background}}" wx:key="index">
      <view class="swiper-img">
        <image src="{{item.image}}" class="img" />
      </view>
    </t-swiper-item>
  </t-swiper>
</view>

<view>
  <t-grid column="{{4}}">
    <t-grid-item 
      wx:for="{{category}}" 
      wx:key="index" 
      text="{{item.text}}"
      >
      <image
        src="{{item.image}}"
        slot="image"
      />
    </t-grid-item>
  </t-grid>
</view>

<view>
  <t-search placeholder="搜索预设文案" />
</view>

<view>
  <view wx:for="{{goods}}"> 
    <view>
      <image src="{{item.img}}"></image>
      <view>
        <text>{{item.title}}</text>
      </view>
      <view>
        <text>{{item.desc}}</text>
      </view>
      <view>
        <text>{{item.price2}}</text>
        <text>{{item.price1}}</text>
      </view>
    </view>
  </view>
</view>
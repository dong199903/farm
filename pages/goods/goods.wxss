.info image{
  width: 100%;
}
page{
  background: #f1ecec;
}
.bao{
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  padding: 20rpx 15rpx;
  font-size: 30rpx;
  border-radius: 15rpx;
}
.other{
  background-color: #fff;
  margin-top: 15rpx;
  padding: 30rpx 15rpx;
  font-size: 36rpx;
  border-radius: 15rpx;
}
.price{
  color: red;
  font-size: 40rpx;
  margin-top: 15rpx;
}
.bot{
  width: 100%;
  position: fixed;
  bottom: 10rpx;
  left: 0;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  padding: 20rpx 30rpx;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.bot>view{
  border-radius: 20rpx;
  border:1rpx solid #fff;
  text-align: center;
  padding: 10rpx 30rpx;
}
.bot>view:first-child{
  background-color: yellow;
}
.bot>view:last-child{
  background-color: red;
}
.loading{
  text-align: center;
}

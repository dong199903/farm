<header title="搜索" statue="1"></header>
<!--loading加载-->
<view class="loading" hover-class="none" hover-stop-propagation="false">
  <t-loading theme="spinner" size="40rpx" loading="{{loading}}"></t-loading>
</view>
<view class="container">
  <view class="search-header">
      <input name="input" bindfocus="focus" bindinput="input" class="keyword" value="{{value}}"  placeholder="搜索你想要的一切" />
      <view class="search_right" bindtap="searchRes">搜索</view>
    </view>
  <view class="section" wx:if="{{selectBox && !empty}}">
    <picker bindchange="bindPickerChange1" range-key="name" value="{{index1}}" range="{{sorts}}">
      <view class="picker">
        分类：{{sorts[index1].name}}
      </view>
    </picker>
    <picker bindchange="bindPickerChange2" value="{{index2}}" range="{{array2}}">
      <view class="picker">
        价格：{{array2[index2]}}
      </view>
    </picker>
  </view>
  <view class="search-result">
    <view class="goods-container">
      <view wx:for="{{showList}}" wx:key="id" class="item" data-id="{{item._id}}" bindtap="getGoods">
        <view class="box">
          <image src="{{item.imgs[0]}}" class="image">
          </image>
        </view>
        <view class="goods-info">
          <view class="goods-title">{{item.title}}</view>
          <view class='price'>￥{{item.price}}</view>
        </view>
      </view>
    </view>
    <view class="no-more-goods">没有更多商品啦</view>
  </view>

</view>
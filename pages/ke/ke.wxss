page{
  
  padding: 0;
}
.search{
  padding: 20rpx 20rpx;
  background-color: #f3f3f3;
  color: #909090;
  border-radius: 30rpx;
  margin-top: 10rpx;
  margin-bottom: 30rpx;
  font-size: 30rpx;
}
.search .iconfont {
  position: relative;
  top: 5rpx;
  margin-right: 10rpx;
}
.loading{
  text-align: center;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.container{
  padding: 0 30rpx;
}
.image_box{
  width: 98%;
  border-radius: 20rpx;
}
.image_box image{
  width:100%;
  max-height: 300rpx;
}
.swiper_item{
  border:1rpx solid #ccc;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap; 
  padding: 15rpx 10rpx;
  border-radius: 10rpx;
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}
.swiper_item text{
  margin-right: 15rpx;
  font-size: 26rpx;
}
.t-swiper{
  max-height: 80rpx!important;
}
.header{
  font-size: 40rpx;
  font-weight: bold;
  margin: 20rpx 0 40rpx 0;
}
.recommand_item{
  padding: 30rpx 0;
  border-bottom: 3rpx solid #eee;
}
.title{
  color: #333;
  font-size: 37rpx;
  overflow: hidden;            
  text-overflow: ellipsis;
  white-space: nowrap; 
}
.imgs{
  display: flex;
  justify-content: space-between;
  padding: 22rpx 0;
}
.imgs image{
  width: 33%;
  height: 140rpx;
  border-radius: 15rpx;
}
.info{
  color: #999;
  font-size: 32rpx;
  display: flex;
  justify-content: space-between;
}

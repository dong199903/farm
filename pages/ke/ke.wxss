page{
  padding: 0;
}
.search{
  padding: 20rpx 20rpx;
  background-color: #f3f3f3;
  color: #909090;
  border-radius: 30rpx;
  margin-top: 10rpx;
  margin-bottom: 30rpx;
  font-size: 30rpx;
}
.search .iconfont {
  position: relative;
  top: 5rpx;
  margin-right: 10rpx;
}
.loading{
  text-align: center;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.container{
  padding: 0 30rpx;
}
.image_box{
  width: 98%;
  border-radius: 20rpx;
}
.image_box image{
  width:100%;
  max-height: 300rpx;
}
.swiper_item{
  border:1rpx solid #ccc;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap; 
  padding: 15rpx 10rpx;
  border-radius: 10rpx;
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}
.swiper_item text{
  margin-right: 15rpx;
  font-size: 26rpx;
}
.t-swiper{
  max-height: 80rpx!important;
}
.header{
  font-size: 40rpx;
  font-weight: bold;
  margin: 20rpx 0 20rpx 0;
}
.recommand_item{
  padding: 30rpx 0;
  border-bottom: 3rpx solid #eee;
}
.title{
  color: #333;
  font-size: 37rpx;
  overflow: hidden;            
  text-overflow: ellipsis;
  white-space: nowrap; 
}
.imgs{
  display: flex;
  justify-content: space-between;
  padding: 22rpx 0;
}
.imgs image{
  width: 33%;
  height: 140rpx;
  border-radius: 15rpx;
}
.info{
  color: #999;
  font-size: 32rpx;
  display: flex;
  justify-content: space-between;
}
.expert .header{
  display: flex;
  justify-content: space-between;
}
.expert .header>view{
  font-weight: normal;
  font-size: 32rpx;
  margin-bottom: 30rpx;
}
.expert .answer{
  width: 100%;
  background-color: #f5f5f5;
  padding: 15rpx 0;
}
.expert .answer>view{
  display: flex;
}
.expert .answer>view>view:first-child{
  font-size: 34rpx;
  margin-right: 15rpx;
  padding: 6rpx;
  color: #fff;
  max-height: 45rpx;
}
.expert .answer>view>view:last-child{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  white-space: normal;
  word-break: break-all;
  font-size: 34rpx;
}
.expert .answer>view:first-child{
  margin-bottom: 30rpx;
}
.expert .answer>view:last-child>view:last-child{
  font-size: 32rpx;
}
.wen{
  background-color: #39bf3e;
}
.da{
  background-color: #ff5c00;
  
}
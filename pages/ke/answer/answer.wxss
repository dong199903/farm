.container{
  padding: 0 30rpx;
}
.loading {
  text-align: center;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.answer{
  width: 100%;
  background-color: #f5f5f5;
  padding: 15rpx 0;
  margin-bottom: 20rpx;
}
.answer>view{
  display: flex;
}
.answer>view>view:first-child{
  font-size: 34rpx;
  margin-right: 15rpx;
  padding: 6rpx;
  color: #fff;
  max-height: 45rpx;
}
.answer>view>view:last-child{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  white-space: normal;
  word-break: break-all;
  font-size: 34rpx;
}
.answer>view:first-child{
  margin-bottom: 30rpx;
}
.answer>view:last-child>view:last-child{
  font-size: 32rpx;
}
.wen{
  background-color: #39bf3e;
}
.da{
  background-color: #ff5c00; 
}
.subQuestion{
  width: 100%;
  text-align: center;
  padding: 20rpx 0;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #39bf3e;
  color: #fff;
  border-radius: 30rpx;
  box-sizing: border-box;
}
.request{
  background-color: #fff;
  position: relative;
  padding: 40rpx 0 20rpx 0;
}
.request .close{
  position: absolute;
  right: 10rpx;
  top: 5rpx;
  font-weight: bold;
}
.sub{
  padding: 20rpx 0;
  background-color: #39bf3e;
  border-radius: 30rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
  text-align: center;
}